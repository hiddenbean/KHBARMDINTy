<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".TrendFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="KHBAR MDINTy"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:text="Tendance"
                android:id="@+id/lyom"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@android:color/black"
                android:textSize="26dp"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/circle_avatar"
                android:layout_marginEnd="5dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lyom"
                android:layout_marginTop="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:padding="10dp"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/security_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_alignParentStart="true"
                        android:src="@drawable/security"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/security_img"
                        android:text="Sécurité civil"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/open_sans"/>

                    <LinearLayout
                        android:id="@+id/card_place_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/security_img">

                        <TextView
                            android:id="@+id/topic_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grissage à "
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Harhoura, Plage de Témara."
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_bubble_conatiner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_place_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 juin"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="10dp"/>

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/bubbles"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="10dp"
                            android:text="Ayoub Moum"
                            android:layout_marginLeft="3dp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/card_bubble_conatiner"
                        android:layout_height=".7dp"
                        android:background="#14000000"/>

                    <LinearLayout
                        android:id="@+id/card_comment_container"
                        android:layout_below="@+id/divider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/open_sans"
                            android:textSize="16sp"
                            android:text="F had la période des vacances vraiment kaykter grissage, hier une fille à été volée o hadi pas la 1er fois !"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_trend_conatiner"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_comment_container">

                        <ImageView
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/card_comment_container"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/circle_avatar"/>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nabile Ad"
                            android:fontFamily="@font/open_sans"
                            android:textSize="11dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="-"/>

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_baseline_offline_bolt"/>

                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Populaire de 77 réaction"
                            android:fontFamily="@font/open_sans"
                            android:textSize="11dp"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/divider2"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/card_trend_conatiner"
                        android:layout_height=".7dp"
                        android:background="#14000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_baseline_arrow_upward"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/open_sans_bold"/>

                            <ImageView
                                android:layout_marginStart="15dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_baseline_arrow_downward"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_outline_comment_alt"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Réacter"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_outline_share"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partager"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_marginTop="-5dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:padding="10dp"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/trash_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_baseline_delete_forever"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/trash_img"
                        android:text="Propreté urbaine"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/open_sans"/>

                    <LinearLayout
                        android:id="@+id/card_place_container2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/trash_img">

                        <TextView
                            android:id="@+id/topic_detail2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Les déchets "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Harhoura, Plage de Témara."
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_bubble_conatiner2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_place_container2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31 juin"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="10dp"/>

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/bubbles"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="10dp"
                            android:text="Houssin Dam"
                            android:layout_marginLeft="3dp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider3"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/card_bubble_conatiner2"
                        android:layout_height=".7dp"
                        android:background="#14000000"/>

                    <LinearLayout
                        android:id="@+id/card_comment_container2"
                        android:layout_below="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="245dp"
                            android:src="@drawable/beach"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/open_sans"
                            android:textSize="16sp"
                            android:text="Daro vraiment un bon travail, BRAVO !"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_trend_conatiner2"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_comment_container2">

                        <ImageView
                            android:layout_marginTop="3dp"
                            android:layout_below="@+id/card_comment_container2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/circle_avatar"/>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nabile Ad"
                            android:fontFamily="@font/open_sans"
                            android:textSize="11dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="-"/>

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_baseline_offline_bolt"/>

                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Populaire de 25 réaction"
                            android:fontFamily="@font/open_sans"
                            android:textSize="11dp"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/divider4"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/card_trend_conatiner2"
                        android:layout_height=".7dp"
                        android:background="#14000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider4"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_baseline_arrow_upward"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="99"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/open_sans_bold"/>

                            <ImageView
                                android:layout_marginStart="15dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_baseline_arrow_downward"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_outline_comment_alt"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Réacter"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_outline_share"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partager"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>