<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignupActivity">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="2dp"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                app:fontFamily="@font/open_sans_bold"
                android:textSize="40sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/open_sans"
                    android:layout_marginStart="5dp"
                    android:text="Créer un compte et "
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khbaratk bin ydik !"
                    android:fontFamily="@font/open_sans_bold"/>
            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="S'inscrire avec Facebook"
                android:theme="@style/FacebookButton"/>

            <TextView
                android:paddingTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ou avec E-mail/Numéro de téléphone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/form_input"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textAllCaps="true"
                        android:textSize="13.5sp"
                        android:fontFamily="@font/open_sans_bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Saissisez votre nom"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:inputType="text"
                        android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_input"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prénom"
                        android:textAllCaps="true"
                        android:textSize="13.5sp"
                        android:fontFamily="@font/open_sans_bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Saissisez votre prénom"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:inputType="text"
                        android:singleLine="true"/>

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_input"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail ou numéro de téléphone"
                    android:textAllCaps="true"
                    android:textSize="13.5sp"
                    android:fontFamily="@font/open_sans_bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Saissisez votre e-mail ou numéro de téléphone"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_input"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe"
                    android:textAllCaps="true"
                    android:textSize="13.5sp"
                    android:fontFamily="@font/open_sans_bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Saissisez un nouveau mot de passe"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_input"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date de naissance"
                    android:textAllCaps="true"
                    android:textSize="13.5sp"
                    android:fontFamily="@font/open_sans_bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="15sp"
                    android:hint="Saisissez votre date de naissance"
                    android:fontFamily="@font/open_sans"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:inputType="date"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_input"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexe"
                    android:textAllCaps="true"
                    android:textSize="13.5sp"
                    android:fontFamily="@font/open_sans_bold"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gender"
                    android:layout_marginLeft="-4dp">
                </Spinner>

            </LinearLayout>

            <Button
                android:id="@+id/email_sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="16dp"
                android:text="S'inscrire"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:theme="@style/PrimaryButton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En vous inscrivant, vous acceptez les conditions d'utilisation et la politique de confidentialité de KHBAR MDINTy."
                android:textSize="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="5dp"/>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>